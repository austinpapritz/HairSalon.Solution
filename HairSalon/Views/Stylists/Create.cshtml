@{
    ViewData["Title"] = "New Stylist";
}

@model Stylist
@using HairSalon.Models;

<h3>New Stylist</h3>

<form asp-action="Create" asp-controller="Stylists" method="post">
    @Html.AntiForgeryToken()

    @* Name *@
    <div class="form-group">   
        <label asp-for="Name" class="control-label">Name: </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    @* Specialty *@
    <div class="form-group">
        <label asp-for="Specialty" class="control-label">Specialty: </label>
        <input asp-for="Specialty" class="form-control" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>

    @* Wage *@
    <div class="form-group">
        <label asp-for="Wage" class="control-label">Wage: </label>
        <input asp-for="Wage" class="form-control" value="0.00" />
        <span asp-validation-for="Wage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add Stylist" class="btn btn-primary" />
    </div>
</form>

@Html.ValidationSummary(true, "", new { @class="text-danger" })