@{
    ViewData["Title"] = "Our Stylists";
}
@using HairSalon.Models;

<h1>@ViewBag.Stylist.Name</h1>
<h5>Specialty: @ViewBag.Stylist.Specialty</h5>
<h5>Wage: $@ViewBag.Stylist.Wage</h5>



<h2>Client List</h2>

@if (@Model.Count == 0)
{
    <h6>No clients</h6>
}

<ol>
    @foreach (Client client in Model)
    {
        <li>
            @* <a href="/clients/details/{@client.ClientId}"> *@
            @client.Name
            @* </a> *@
            </li>
    }
</ol>