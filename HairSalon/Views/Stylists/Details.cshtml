@{
    ViewData["Title"] = "Our Stylists";
}
@using HairSalon.Models;

<h1>@ViewBag.Stylist.Name</h1>
<h5>Specialty: @ViewBag.Stylist.Specialty</h5>
<h5>Wage: $@ViewBag.Stylist.Wage</h5>

@if (@Model.Count == 0)
{
    <h3>This stylist has no clients</h3>
}

<h2>Client List</h2>
<ol>
    @foreach (Client client in Model)
    {
        <li><a href="/clients/details/{@client.ClientId}">@client.Name</a></li>
    }
</ol>