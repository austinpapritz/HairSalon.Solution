@{
    ViewData["Title"] = "Our Stylists";
}
@using HairSalon.Models;

<h1>Our Stylists</h1>

@if (@Model.Count == 0)
{
    <h3>No stylists</h3>
}

<ol>
    @foreach (Stylist stylist in Model)
    {
        <li><a href="/stylists/details/@stylist.StylistId">@stylist.Name</a></li>
    }
</ol>