@{
    ViewData["Title"] = "Our Stylists";
}
@using HairSalon.Models;

<h1>Our Stylists</h1>

@if (@Model.Count == 0)
{
    <h3>No stylists</h3>
}

<ol>
    @foreach (Stylist stylist in Model)
    {
        <li>
            <a href="/stylists/details/@stylist.StylistId">@stylist.Name</a>
            <a href="#" data-id="@stylist.StylistId" class="delete-link emoji">❌</a>
            <a href="/stylists/edit/@stylist.StylistId" data-id="@stylist.StylistId" class="edit-link emoji">✏️</a>
        </li>
    }
</ol>