@{
    ViewData["Title"] = "Our Stylists";
}
@using HairSalon.Models;

<h1>Our Stylists</h1>

@if (@Model.Count == 0)
{
    <h3>No stylists</h3>
}

<ol>
    @foreach (Stylist stylist in Model)
    {
        <li>@stylist.Name
            @* See Stylist details *@
            <a href="/stylists/details/@stylist.StylistId" class="emoji">🔍</a>
            @* Edit Stylist *@
            <a href="/stylists/edit/@stylist.StylistId" class="emoji">✏️</a>
            @* wwwroot/js/site.js handles delete *@
            <a href="#" data-id="@stylist.StylistId" class="delete-link emoji">❌</a>
        </li>
    }
</ol>