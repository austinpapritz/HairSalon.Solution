@model HairSalon.Models.Client

@{
    ViewData["Title"] = "New Client";
}


<h1>New Client</h1>

<form asp-action="create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name: </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StylistId" class="control-label">Stylist: </label>
        <select asp-for="StylistId" class ="form-control" asp-items="ViewBag.Stylists">
            <option value="">-- Select Stylist --</option>
        </select>
        <span asp-validation-for="StylistId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add Client" class="btn btn-primary" />
    </div>
</form>